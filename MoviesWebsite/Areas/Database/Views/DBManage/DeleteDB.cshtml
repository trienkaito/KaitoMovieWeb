@inject AdminSidebarService _AdminSidebarService
@{
    ViewData["Title"] = "Delete Database";
}

<p class=" alert alert-danger">Are you sure you want to delete the Database?</p>
<form method="post">
    <div class="form-group">
        <button type="submit" class="btn btn-danger">Delete</button>
        <a class="btn btn-primary" asp-action="Index">Database info</a>
    </div>
</form>

@{
    _AdminSidebarService.SetActive("DBManage", "Index", "Database");
}

@section Sidebar
{
    @Html.Raw(_AdminSidebarService.renderHtml())
}

