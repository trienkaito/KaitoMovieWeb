@model MoviesWebsite.Models.Movie.Comment

<form method="post" asp-action="Create" asp-controller="Comments" asp-area="Admin".>
    <input asp-for="MovieId" hidden class="form-control"></input>
    <input asp-for="UserId" hidden class="form-control"></input>
    <input asp-for="CommentParentId" hidden class="form-control"></input>
    <input asp-for="CreatedDate" hidden class="form-control" />
    <input asp-for="UpdateDate" hidden class="form-control" />
    <textarea asp-for="Content" id="commentContent" cols="30" rows="2" class="form-control"></textarea>
</form>

<script>
    document.getElementById('commentContent').addEventListener('keydown', function (event) {
        if (event.key === 'Enter' && !event.shiftKey) {
            event.preventDefault();

            var content = this.value.trim();

            console.log(content); 

            if (content === "") {
                return; 
            } else {
                this.form.submit();  
            }
        }
    });

</script>
