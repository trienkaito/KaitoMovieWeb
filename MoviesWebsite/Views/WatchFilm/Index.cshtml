                    <h1 class="bd-hd">@Model.Movie.Title - @Model.Movie.ReleaseDate?.Year</h1>
                    <p>@Model.Movie.Description</p>

                    <!-- Comments Section -->
                    @Html.Partial("_CommentsSection", Model.Movie)
                </div>
            </div>
